public class MainActivity extends Activity {
	private ArrayList<String> groupList;
	private ArrayList<String> childList;
	private ListView mListView;
//	private MyAdpter adapter;

	
	public void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.dialogtest);
		Button btn = (Button)findViewById(R.id.button);
		Button btn1 = (Button)findViewById(R.id.button1);
		btn.setOnClickListener(new OnClickListener(){

			@Override
			public void onClick(View v) {
                LayoutInflater inflater = LayoutInflater.from(MainActivity.this);  
                final View view = inflater.inflate(R.layout.dialog, null);// 获得自定义对话框
                AlertDialog.Builder dialog = new AlertDialog.Builder(MainActivity.this);
                dialog.setTitle("自定义登录对话框");
                dialog.setView(view);
                Spinner s = (Spinner)view.findViewById(R.id.spinner);
				String[] m ={"A","B","C","D","E","F","G"};
				ArrayAdapter<String> adapter = new ArrayAdapter<String>(MainActivity.this, android.R.layout.simple_spinner_item,m);
				adapter.setDropDownViewResource(android.R.layout.simple_spinner_dropdown_item);
				s.setAdapter(adapter);
                
                dialog.setPositiveButton("确定", new DialogInterface.OnClickListener() {
					
					@Override
					public void onClick(DialogInterface dialog, int which) {
						EditText userName = (EditText) view.findViewById(R.id.dialog_demo_loginETUserName);
						EditText password = (EditText) view.findViewById(R.id.dialog_demo_loginETPassWord);
//						showDialog("姓名 ：" + userName.getText().toString() + "密码：" + password.getText().toString());
						
					}
				});
                
                dialog.setNegativeButton("取消", new DialogInterface.OnClickListener(){

					@Override
					public void onClick(DialogInterface dialog, int which) {
						
					}
				});
                dialog.create().show();
                return;
			}
			
		});
		
		btn1.setOnClickListener(new OnClickListener() {
			
			@Override
			public void onClick(View v) {
				Intent intent = new Intent(MainActivity.this,SearchActivity.class);
				startActivity(intent);
			}
		});
		
}
	}
